<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.gallery.GirlGalleryActivity">
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:id="@+id/framelayout"
        android:layout_height="0dp"/>
    <RadioGroup
        android:layout_below="@id/framelayout"
        android:id="@+id/typeLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/viewpager_type"
            android:layout_width="0dp"
            android:button="@null"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="#ab61e7"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ViewPage"/>
        <RadioButton
            android:gravity="center"
            android:button="@null"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:id="@+id/jellyviewpager_type"
            android:layout_width="0dp"
            android:background="#ec2fa0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="JellyViewPage"/>
    </RadioGroup>
</LinearLayout>

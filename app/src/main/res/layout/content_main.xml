<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.pictures.mainpicture.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <android.support.design.widget.TabLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        app:tabIndicatorColor="#9dff00"
        app:tabSelectedTextColor="#a9fe00"
        app:tabTextColor="#ffffff"
        app:tabMode="scrollable"
        app:tabGravity="center"
        android:fillViewport="false" />
    <android.support.v4.view.ViewPager
        android:background="@color/background"
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
    />
    <com.lichunjing.picturegirls.widget.loadorerror.LoadOrErrorView
        android:id="@+id/load_or_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

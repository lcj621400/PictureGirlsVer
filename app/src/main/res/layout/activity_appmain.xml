<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_unseleted_color" />

        <RadioGroup
            android:id="@+id/tab_main"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white_bg_color"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/main_news_tab_selector"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/tab_news"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/tab_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/main_pic_tab_selector"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/tab_unseleted_color"
                android:text="@string/tab_picture" />

            <RadioButton
                android:id="@+id/tab_mine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/main_mine_tab_selector"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/tab_unseleted_color"
                android:text="@string/tab_mine" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>

